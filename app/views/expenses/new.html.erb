<header>
    <div>
    <%= link_to image_tag('back.png'), groups_path, id: "back-icon" %>
    </div>
        <h2>
            TRANSACTIONS
        </h2>
    <div>
        <%= button_to "Logout", destroy_user_session_path, method: :delete %>
    </div>
</header>

<div id="expenses-new">
    <%= form_with model: Expense.new, url: group_expenses_path(current_user) do |form| %>
        <div>
            <%= form.text_field :name, placeholder: "Name" %>
        </div>
        <div>
            <%= form.number_field :amount, placeholder: "Amount" %>
        </div>
        <div>
            <%= form.label :categories %>
            <%= form.collection_select :groups_id, current_user.groups, :id, :name, { prompt: "Select Ingedient"}, {class: "form-select"} %>
        </div>
        <div id="actions">
            <%= form.submit "Save", id: "button" %>
        </div>
    <% end %>
</div>