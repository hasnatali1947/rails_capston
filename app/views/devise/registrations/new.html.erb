<header>
    <div>
        <%= link_to image_tag('back.png'), root_path, id: "back-icon" %>
    </div>
    <h2>
        REGISTRATION
    </h2>
    <div>
      <%= button_to "Signup", new_user_registration_path %>
    </div>
</header>

<div class="Registration-signUp">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
  <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name" %>
  </div>
  
  <div class="field">
  <%= f.text_field :email, autofocus: true, autocomplete: "name", placeholder: "Email" %>
  </div>
  
  <div class="field">
  <%= f.password_field :password, autocomplete: "new-password" , placeholder: "Password ( 6 minimum characters )" %>
  </div>
  
  <div class="field">
  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
  </div>
  
  <div class="actions">
  <%= f.submit "Sign up" %>
  </div>
  <div>
  <%= render "devise/shared/links" %>
  </div>
  <% end %>
  </div>